<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F4DB78</item>
        <item name="colorPrimaryDark">#A33A47</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:itemBackground">#A33A47</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">#FFF5FB</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#A33A47</item>
        <item name="android:background">#F2E3BA</item>
        <item name="android:textColorPrimary">#595959</item>
        <item name="android:colorAccent">#A33A47</item>
    </style>

    <style name="AlertDialogDate" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#A33A47</item>
        <item name="android:colorAccent">#A33A47</item>
    </style>
</resources>
