<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:layout_width="350dp"
    android:layout_height="210dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="350dp"
        android:layout_height="210dp">

        <TextView
            android:id="@+id/textViewBooking"
            android:layout_width="182dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="FOOD RESERVATION REQUEST"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblStudentIDTitle"
            android:layout_width="89dp"
            android:layout_height="19dp"
            android:layout_gravity="left"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:text="Student Email:"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewBooking" />

        <TextView
            android:id="@+id/lblStudentID"
            android:layout_width="180dp"
            android:layout_height="23dp"
            android:layout_marginTop="12dp"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/lblStudentIDTitle"
            app:layout_constraintTop_toBottomOf="@+id/textViewBooking" />

        <TextView
            android:id="@+id/lblFoodTypeTitle"
            android:layout_width="105dp"
            android:layout_height="19dp"
            android:layout_gravity="left"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:text="Selected Food:"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblStudentIDTitle" />

        <TextView
            android:id="@+id/lblFoodType"
            android:layout_width="116dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="144dp"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.527"
            app:layout_constraintStart_toEndOf="@+id/lblFoodTypeTitle"
            app:layout_constraintTop_toBottomOf="@+id/lblStudentID" />

        <TextView
            android:id="@+id/lblQuantityTitle"
            android:layout_width="81dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:layout_marginStart="36dp"
            android:text="Quantity:"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblFoodTypeTitle" />

        <TextView
            android:id="@+id/lblQuantity"
            android:layout_width="116dp"
            android:layout_height="19dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="180dp"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toEndOf="@+id/lblQuantityTitle"
            app:layout_constraintTop_toBottomOf="@+id/lblFoodType" />

        <TextView
            android:id="@+id/lblRemarksTitle"
            android:layout_width="102dp"
            android:layout_height="19dp"
            android:layout_gravity="left"
            android:layout_marginStart="36dp"
            android:text="Remarks:"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblQuantityTitle" />

        <TextView
            android:id="@+id/lblRemarks"
            android:layout_width="196dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="172dp"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.341"
            app:layout_constraintStart_toEndOf="@+id/lblRemarksTitle"
            app:layout_constraintTop_toBottomOf="@+id/lblQuantity" />

        />

        <TextView
            android:id="@+id/lblTotalTitle"
            android:layout_width="66dp"
            android:layout_height="27dp"
            android:layout_gravity="left"
            android:layout_marginStart="36dp"
            android:layout_marginTop="4dp"
            android:text="Total: RM"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblRemarksTitle" />

        <TextView
            android:id="@+id/lblStatusReserveTitle"
            android:layout_width="54dp"
            android:layout_height="27dp"
            android:layout_gravity="left"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Status:"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblTotalTitle"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/lblTotal"
            android:layout_width="145dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="112dp"
            android:text="TitleTotal"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/lblTotalTitle"
            app:layout_constraintTop_toBottomOf="@+id/lblRemarks" />

        <TextView
            android:id="@+id/lblStatusReserve"
            android:layout_width="145dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="128dp"
            android:layout_marginBottom="20dp"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/lblStatusReserveTitle" />

        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>