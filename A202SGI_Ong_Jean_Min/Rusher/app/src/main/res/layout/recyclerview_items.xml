<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:layout_width="350dp"
    android:layout_height="210dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="350dp"
        android:layout_height="210dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="144dp"
            android:layout_height="27dp"
            android:layout_gravity="left"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:text="LEAVE REQUEST"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblIDTitle"
            android:layout_width="102dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:layout_marginStart="36dp"
            android:layout_marginTop="4dp"
            android:text="Student Email:"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="232dp"
            android:layout_height="27dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="56dp"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.321"
            app:layout_constraintStart_toEndOf="@+id/lblIDTitle"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/lblDateFrom"
            android:layout_width="116dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="140dp"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.173"
            app:layout_constraintStart_toEndOf="@+id/lblDateFromTitle"
            app:layout_constraintTop_toBottomOf="@+id/lblReason" />

        <TextView
            android:id="@+id/lblDateFromTitle"
            android:layout_width="96dp"
            android:layout_height="28dp"
            android:layout_gravity="left"
            android:layout_marginStart="36dp"
            android:layout_marginTop="4dp"
            android:text="Leave Date From:"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblReasonTitle" />

        <TextView
            android:id="@+id/lblReasonTitle"
            android:layout_width="88dp"
            android:layout_height="22dp"
            android:layout_gravity="left"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:text="Leave Reason:"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblIDTitle" />

        <TextView
            android:id="@+id/lblDateTo"
            android:layout_width="135dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="128dp"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.319"
            app:layout_constraintStart_toEndOf="@+id/lblDateToTitle"
            app:layout_constraintTop_toBottomOf="@+id/lblDateFrom" />

        <TextView
            android:id="@+id/lblStatusLeave"
            android:layout_width="135dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="136dp"
            android:layout_marginBottom="8dp"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/lblStatusLeaveTitle"
            app:layout_constraintTop_toBottomOf="@+id/lblDateTo"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/lblDateToTitle"
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:layout_gravity="left"
            android:layout_marginStart="36dp"
            android:text="Leave Date To:"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblDateFromTitle" />


        <TextView
            android:id="@+id/lblStatusLeaveTitle"
            android:layout_width="59dp"
            android:layout_height="28dp"
            android:layout_gravity="left"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="8dp"
            android:text="Status:"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblDateToTitle"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/lblReason"
            android:layout_width="128dp"
            android:layout_height="27dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="148dp"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.224"
            app:layout_constraintStart_toEndOf="@+id/lblReasonTitle"
            app:layout_constraintTop_toBottomOf="@+id/lblTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
